<p id="notice"><%= notice %></p>

<h1>Facturas</h1>

<table>
  <thead>
    <tr>
      <th>Fecha de emision</th>
      <th>Fecha de vencimiento</th>
      <th>Total $ </th>
      <th>retraso (dias) </th>
      <th>Multa </th>
      <th>Cliente</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.creation_date %></td>
        <td><%= invoice.end_date %></td>
        <td><%= number_to_currency(invoice.total) %></td>

        <td><%= (14.2857 * (invoice.creation_date - Date.today).to_i ).ceil %></td>
        <!-- (Date.today - (Date.today - 14.day)).to_i  -->
        <td><%= (invoice.creation_date - Date.today).to_i %></td>

        <td><%= invoice.user.name %></td>
        <td><%= invoice.status %></td>
        <td><%= link_to 'Show', invoice %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
